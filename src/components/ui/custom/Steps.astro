---
interface Props {
  steps: Array<{
    title: string;
    description: string;
  }>;
}
const { steps } = Astro.props;
---

<div>
  <div class="grid grid-cols-2 xl:w-1/2 2xl:w-1/3 m-auto mb-20 gap-10">
    {
      steps.map(({ title, description }, __) => (
          <div
            class={`${steps.length > 1 && __ < steps.length - 1 && "border-r-2 border-r-[#FBB911]"} flex flex-col gap-3 w-full max-w-[400px]`}
          >
            <div class="flex flex-col gap-4 pr-10">
              <div class="flex gap-3 items-center">
                <span class="rounded-[5px] py-3 px-5 bg-[#FBB911] self-start text-3xl text-black font-bold">
                  {__ + 1}
                </span>
                <h4 class="font-bold text-2xl">{title}</h4>
              </div>
              <p class="text-lg ">{description}</p>
            </div>

            <slot name="content" />
          </div>
      ))
    }
  </div>
</div>
