---
interface Props {
  Mounts: Array<{
    mount: string;
    text: string;
  }>;
}

const { Mounts } = Astro.props;

// components
import { Image } from "astro:assets"

// styles
import "@/styles/ui/bannerResults.css";

// icons
import Plus from "@/assets/icons/plus.svg"
---

<section>
  <div class="my-20 xxs:py-10 min-h-72 flex xxs:flex-col md:flex-row justify-evenly w-full items-center bg-[#131313] gap-12">
    {
      Mounts.map(({ mount, text }) => (
        <div class="mount flex flex-col items-center w-auto gap-3">
          <div class="flex gap-1 items-end">
            <Image src={Plus} alt={"Icono de suma"} />
            <span class="xxs:text-7xl 2xl:text-8xl font-bold">{mount}</span>
          </div>
          <p class="w-3/4 text-center">{text}</p>
        </div>
      ))
    }
  </div>
</section>
